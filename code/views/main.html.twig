{% extends 'base.html.twig' %}

{% block title %}
    <title>Main page</title>
{% endblock %}

{% block content %}
    <div class="container">
        {% for elementGeneral in elementGeneralCollection %}
            <div class="col-sm-12">
                <div class="card">
                    <img class="card-img" src="{{ 'crawler-static.local/static/img/' ~ elementGeneral.id ~ '.jpg' }}">
                    <div class="card-header">
                        {{ elementGeneral.name }}
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ elementGeneral.detail.description }}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{ elementGeneral.detail.genre }}</li>
                        <li class="list-group-item">{{ elementGeneral.detail.format }}</li>
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}